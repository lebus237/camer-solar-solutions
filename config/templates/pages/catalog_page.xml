<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>catalog_page</key>

    <view>pages/landing/catalog</view>
    <controller>Sulu\Content\UserInterface\Controller\Website\ContentController::indexAction</controller>
    <cacheLifetime>604800</cacheLifetime>

    <meta>
        <title lang="fr">Catalogue</title>
        <title lang="en">Catalog</title>
    </meta>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="fr">Titre</title>
                <title lang="en">Title</title>
            </meta>
            <params>
                <param name="headline" value="true"/>
            </params>

            <tag name="sulu.rlp.part"/>
        </property>
        <property name="url" type="route" mandatory="true">
            <meta>
                <title lang="en">Resourcelocator</title>
                <title lang="fr">Adresse</title>
            </meta>

            <tag name="sulu.rlp"/>
        </property>
        <section name="hero_section">
            <meta>
                <title lang="fr">Banni√®re</title>
                <title lang="en">Hero Section</title>
            </meta>
            <properties>
                <property name="hero_title" type="text_line">
                    <meta>
                        <title lang="fr">Titre</title>
                        <title lang="en">Title</title>
                    </meta>
                    <params>
                        <param name="headline" value="true"/>
                    </params>

                    <tag name="sulu.rlp.part"/>
                </property>
                <property name="hero_subtitle" type="text_area">
                    <meta>
                        <title lang="fr">Sous-titre</title>
                        <title lang="en">Subtitle</title>
                    </meta>
                    <params>
                        <param name="headline" value="true"/>
                    </params>

                    <tag name="sulu.rlp.part"/>
                </property>
            </properties>
        </section>
    </properties>
</template>
