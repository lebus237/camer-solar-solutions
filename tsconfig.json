{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",

    "baseUrl": "./",
    "paths": {
      "@/*": ["./assets/website/*"],
    },
  },
  "include": ["assets/**/*"],
  "exclude": ["node_modules"],
}
